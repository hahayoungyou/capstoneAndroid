<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WritingBoard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="글 작성"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="10dp"/>
            <Button
                android:id="@+id/submit"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:textSize="12dp"
                android:text="완료"
                android:layout_margin="5dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:background="@drawable/round_border"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="제목"
                android:inputType="textPersonName"
                android:background="@drawable/edittext_rectangle"
                android:textSize="28dp"
                android:layout_margin="10dp"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/editTextMultiLineBoard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:hint="여기를 눌러서 글을 작성할 수 있습니다."
                android:inputType="textMultiLine"
                android:background="@drawable/edittext_rectangle"
                android:textSize="18dp"
                android:layout_margin="10dp"
                android:padding="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/newImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <Button
                    android:id="@+id/imageUploadButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toEndOf="@+id/newImage"
                    android:text="📷"
                    android:textSize="12dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="태그를 달아주세요."
                android:textSize="15dp"
                android:padding="10dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tagSetting1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="         #"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/tag1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="태그"
                    android:inputType="textPersonName"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tagSetting2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="         #"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/tag2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="태그"
                    android:inputType="textPersonName"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tagSetting3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="         #"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/tag3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="태그"
                    android:inputType="textPersonName"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tagSetting4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="         #"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/tag4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="태그"
                    android:inputType="textPersonName"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tagSetting5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="         #"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/tag5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="태그"
                    android:inputType="textPersonName"
                    android:textSize="12dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>