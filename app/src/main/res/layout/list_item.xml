<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="16dp"
    android:background="#E7EDF7">
    <RelativeLayout
        android:id="@+id/item_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/board_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="board_no"
            android:layout_marginTop="10dp"
            android:textSize="12dp" />
        <TextView
            android:id="@+id/board_date"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="board_date"
            android:layout_marginTop="10dp"
            android:textSize="12dp" />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:layout_below="@+id/board_no"
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/goodnum"
            android:layout_alignParentBottom="true"
            android:text="👍 " />
        <TextView
            android:id="@+id/goodnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/comment"
            android:layout_alignParentBottom="true"
            android:text="num" />
        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/commentnum"
            android:layout_alignParentBottom="true"
            android:text="   📄 " />
        <TextView
            android:id="@+id/commentnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="num" />

    </RelativeLayout>
    <View
        android:layout_below="@+id/item_wrapper"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

</RelativeLayout>